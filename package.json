{
  "name": "puppy-callbacks",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api-docs": "scripty",
    "api-report": "scripty",
    "build": "scripty",
    "clean": "scripty",
    "examples": "yarn --cwd examples start",
    "postinstall": "scripty",
    "lint": "scripty",
    "boom": "scripty",
    "prod-publish": "scripty",
    "proxy-registry": "scripty",
    "sort": "scripty",
    "test": "scripty",
    "test-publish": "scripty",
    "dev": "yarn build --watch --preserveWatchOutput",
    "docs-manual": "yarn clean && yarn build && yarn api-extractor run --local && yarn api-documenter markdown -i temp -o docs",
    "prepare": "husky install"
  },
  "lint-staged": {
    "packages/**/src/*.{js,ts,json}": [
      "yarn sort && prettier --single-quote --write"
    ],
    "examples/**/src/**/.{js,ts,css,json}": [
      "yarn sort && prettier --single-quote --write"
    ],
    "*.{md,mdx,yml}": [
      "yarn sort && prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-typescript": "7.13.0",
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@commitlint/config-lerna-scopes": "12.0.1",
    "@microsoft/api-documenter": "7.12.12",
    "@microsoft/api-extractor": "7.13.2",
    "@types/jest": "26.0.20",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "babel-jest": "26.6.3",
    "commitlint": "12.0.1",
    "eslint": "7.22.0",
    "eslint-plugin-jest": "24.3.1",
    "husky": "5.1.3",
    "is-ci": "3.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "scripty": "2.0.0",
    "sort-package-json": "1.49.0",
    "typescript": "4.2.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://localhost:4873"
  },
  "scripty": {
    "path": "./scripts/workspaces"
  }
}