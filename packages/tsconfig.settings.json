{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "types": [],
    "lib": [
      "dom",
      "es2017"
    ] /* Specify library files to be included in the compilation. */,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": ["**/node_modules/**", "**/lib/**"]
}