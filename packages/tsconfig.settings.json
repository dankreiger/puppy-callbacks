{
  "compilerOptions": {
    "module": "ESNext",
    "types": [],
    "target": "ES2015",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "exclude": ["**/node_modules/**", "**/lib/**"]
}