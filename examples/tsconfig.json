{
  "compilerOptions": {
    "module": "es2015",
    "types": [],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2015",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "outDir": "public/assets/",
    "rootDir": "src"
  },
  "exclude": ["**/node_modules/**", "public"]
}